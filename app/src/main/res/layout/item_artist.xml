<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_s"
    android:layout_marginBottom="@dimen/padding_s"
    android:layout_marginEnd="@dimen/padding_s"
    app:cardBackgroundColor="@color/whiteAlpha10"
    app:cardCornerRadius="@dimen/padding_sss"
    app:strokeWidth="@dimen/padding_sss"
    android:id="@+id/mcv_song">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/height_action_bar"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_default"
        android:paddingTop="@dimen/padding_s"
        android:paddingEnd="@dimen/padding_default"
        android:paddingBottom="@dimen/padding_s">

        <TextView
            android:id="@+id/tv_first_name"
            android:layout_width="@dimen/height_action_bar_s"
            android:layout_height="@dimen/height_action_bar_s"
            android:padding="@dimen/padding_s"
            android:textColor="@color/red_droid"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@drawable/shape_artist_circle"/>

        <TextView
            android:id="@+id/tv_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_default"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black_text"
            android:textSize="@dimen/text_title"
            android:textStyle="bold"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>


